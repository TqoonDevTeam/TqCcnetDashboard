<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>티쿤개발시스템</title>
    @Styles.Render("~/bundles/commoncss")
    <script data-main="/Views/Login/App/main" src="/Scripts/require.js"></script>
</head>
<body ng-cloak ng-controller="loginCtrl as ctrl">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="display:inline-block">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form name="frmLogin" novalidate form-check>
                            <fieldset ng-if="mode === 'login'">
                                <div class="form-group">
                                    <input ng-model="user.id" class="form-control" placeholder="ID" name="id" type="text" autofocus="" required>
                                </div>
                                <div class="form-group">
                                    <input ng-model="user.pw" class="form-control" placeholder="Password" name="password" type="password" required>
                                </div>
                                <button ng-click="ctrl.login()" ng-disabled="prgsShow" class="btn btn-lg btn-success btn-block" type="submit">Signin</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>